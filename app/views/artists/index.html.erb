<h1>
  Artists List
</h1>

<table>
	<thead>
		<tr>
		  <th> Profile Photo </th>
			<th> Artist </th>
			<th> Bio </th>
		</tr>
	</thead>
	<tbody>
		<% @artists.each do |artist| %>
			<tr>
			  <td>
			    <% if artist.avatar.attached? %>
			      <image src="<%= (url_for(artist.avatar)) %>" height=100px>
			    <% end %>
			  </td>
				<td> <%= artist.name %> </td>
				<td> <%= artist.bio.truncate(30) %> </td>
				<td>
					<%= link_to edit_artist_path(artist.id) do %>
						Edit
					<% end %>
					|
					
					<%= link_to artist_path(artist.id), method: :delete, data: { confirm: "Are you sure?" } do %>
						Delete
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<br/>

<%= link_to new_artist_path do%>
	Add New Artist
<% end %>
