<div class="artists-container">
  <div class="artists-sticky-header">
    <span class="artists-header-title">ARTISTS</span>
    <div class="artists-add-container">
      <div class="artists-add-btn">
        <a href="<%= new_artist_path %>">
          Add new
        </a>
      </div>
    </div>
  </div>

  <div class="artists-items-container">
    <% @artists.each do |artist| %>
      <div class="artists-item">
        <div class="artist-delete-container">
          <div class="artist-delete-btn">
            <%= link_to artist_path(artist.id), method: :delete, data: { confirm: "Do you want to delete this artist?" } do %>
					    âœ•
				    <% end %>
          </div>
        </div>
        <div class="artists-avatar-container">
          <% if artist.avatar.attached? %>
            <image class="artists-avatar" src="<%= (url_for(artist.avatar)) %>">
          <% else %>
            <image class="artists-avatar" src="<%= asset_pack_path 'media/images/default.jpg' %>">
          <% end %>
        </div>
        
        <div class="artists-details-container">
          <div class="artists-name">
            <%= artist.name %>
          </div>
          <div class="artists-bio">
            "<%= artist.bio.truncate(40) %>"
          </div>
        </div>
        
        <div class="artist-edit-container">
          <a class="artist-edit-btn" href="<%= edit_artist_path(artist.id) %>">
					  Edit
          </a>
        </div>
        
      </div>
    <% end %>
  </div>

  <br/>
</div>
